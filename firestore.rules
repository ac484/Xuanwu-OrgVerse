rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(orgId) {
      return isSignedIn() && get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid;
    }

    // 組織：核心主權校準
    match /organizations/{orgId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isOwner(orgId));
      
      // 子集合：審計日誌
      match /pulseLogs/{logId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
      }

      // 子集合：合作夥伴邀請
      match /invites/{inviteId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isOwner(orgId);
      }

      // 子集合：作業地點與排班
      match /locations/{locId} {
        allow read: if isSignedIn();
        allow write: if isOwner(orgId);
      }
      match /schedules/{schId} {
        allow read: if isSignedIn();
        allow write: if isOwner(orgId);
      }
    }

    // 空間：遞迴子集合治理
    match /workspaces/{workspaceId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || request.resource.data.ownerId == request.auth.uid);
      
      // 所有原子能力子集合 (tasks, issues, files, dailyLogs) 繼承空間權限
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }
    
    // 預設拒絕所有未定義存取
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
