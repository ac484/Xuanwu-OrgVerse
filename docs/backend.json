
{
  "entities": {
    "Organization": {
      "title": "Organization",
      "description": "A dimension entity that groups workspaces and members",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "ownerId": { "type": "string" },
        "role": { "type": "string", "enum": ["Owner", "Admin", "Member", "Guest"] },
        "theme": { "type": "object" }
      },
      "required": ["name", "ownerId"]
    },
    "Workspace": {
      "title": "Workspace",
      "description": "A logical workspace node within an organization",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "orgId": { "type": "string" },
        "visibility": { "type": "string", "enum": ["visible", "hidden"] },
        "protocol": { "type": "string" },
        "scope": { "type": "array", "items": { "type": "string" } },
        "capabilities": { "type": "array", "items": { "type": "object" } }
      },
      "required": ["name", "orgId"]
    },
    "PartnerInvite": {
      "title": "Partner Invite",
      "description": "An invitation sent to an external email to join the dimension",
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "role": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "accepted", "expired"] },
        "invitedAt": { "type": "object" },
        "protocol": { "type": "string" }
      },
      "required": ["email", "status"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/organizations/{orgId}": {
      "schema": "#/backend/entities/Organization",
      "description": "Top-level dimension definitions"
    },
    "/organizations/{orgId}/invites/{inviteId}": {
      "schema": "#/backend/entities/PartnerInvite",
      "description": "Pending invitations for external partners"
    },
    "/workspaces/{workspaceId}": {
      "schema": "#/backend/entities/Workspace",
      "description": "Logical workspace definitions"
    }
  }
}
